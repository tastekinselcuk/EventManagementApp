@model IEnumerable<EventManagementApp.Models.DTOs.EventDTO>

@{
    ViewData["Title"] = "Events";
}

<div class="container">
    <div class="row align-items-center page-header">
        <div class="col">
            <h1 class="display-4">Upcoming Events</h1>
        </div>
        <div class="col-auto">
            <a asp-controller="Event" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Event
            </a>
            <a asp-controller="Participant" asp-action="Create" class="btn btn-secondary">
                <i class="bi bi-person-plus"></i> Add Participant
            </a>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="event-card card h-100">
                    <div class="card-body">
                        <h3 class="card-title h5 mb-3">@item.Title</h3>
                        <div class="card-text">
                            <p class="mb-2">
                                <i class="bi bi-calendar3"></i>
                                <span class="ms-2">@item.Date.ToString("MMM dd, yyyy HH:mm")</span>
                            </p>
                            <p class="mb-3">
                                <i class="bi bi-geo-alt"></i>
                                <span class="ms-2">@item.Location</span>
                            </p>
                        </div>
                        <a asp-controller="Event" asp-action="Details" asp-route-id="@item.Id" 
                           class="btn btn-outline-primary stretched-link">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
