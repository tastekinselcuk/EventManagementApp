@model EventManagementApp.Models.DTOs.EventDTO

@{
    ViewData["Title"] = Model.Title;
}

<div class="container" data-event-id="@Model.Id">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title h2 mb-4">@Model.Title</h1>
                    <div class="event-details">
                        <p class="mb-3">
                            <i class="bi bi-calendar3 text-primary"></i>
                            <strong class="ms-2">Date:</strong>
                            <span class="ms-2">@Model.Date.ToString("MMMM dd, yyyy HH:mm")</span>
                        </p>
                        <p class="mb-3">
                            <i class="bi bi-geo-alt text-primary"></i>
                            <strong class="ms-2">Location:</strong>
                            <span class="ms-2">@Model.Location</span>
                        </p>
                        <div class="mb-3">
                            <i class="bi bi-info-circle text-primary"></i>
                            <strong class="ms-2">Details:</strong>
                            <p class="mt-2 ms-4">@Model.Details</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h3 class="h4 mb-0">Participants</h3>
                        <button type="button" class="btn btn-primary btn-sm" 
                                data-bs-toggle="modal" data-bs-target="#addParticipantModal">
                            <i class="bi bi-plus-lg"></i> Add
                        </button>
                    </div>
                    <div id="participantsList" class="participant-list">
                        <!-- Participants loaded via AJAX -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="addParticipantModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Participant</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <select id="participantSelect" class="form-select">
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="addParticipantBtn">Add Participant</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/eventDetails.js"></script>
}
